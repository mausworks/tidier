{
  "extends": "../../tsconfig.json",
  "include": [
    "./src/**/*.ts",
    "./src/.tidierrc.schema.json",
    "watch.ts",
    "../tidier-cli/src/callbacks.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "rootDir": "./src/",
    "module": "commonjs",
    "target": "ES2015",
    "lib": ["es2019"],
    "types": ["node", "jest"],
    "outDir": "./dist/",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
