{
  "extends": "../../tsconfig.json",
  "include": ["src/**/*.ts", "src/.tidierrc.schema.json"],
  "compilerOptions": {
    "rootDir": "src",
    "composite": true,
    "module": "commonjs",
    "lib": ["es2019"],
    "types": ["node", "jest"],
    "outDir": "./dist/",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
