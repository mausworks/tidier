{
  "name": "tidier",
  "displayName": "Tidier",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mausworks/tidier",
    "directory": "packages/tidier-vscode/"
  },
  "publisher": "mausworks",
  "description": "The project formatter",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Formatters",
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Tidier",
      "properties": {
        "tidier.fixes.enabled": {
          "description": "Determines which fixes are automatically applied.",
          "type": "string",
          "enum": [
            "all",
            "files",
            "folders",
            "none"
          ],
          "default": "all"
        },
        "tidier.problems.enabled": {
          "type": "string",
          "enum": [
            "all",
            "files",
            "folders",
            "none"
          ],
          "description": "Determines which problems are displayed in the problems pane.",
          "default": "all"
        },
        "tidier.problems.severity": {
          "type": "string",
          "default": "information",
          "description": "Determines the severity of problems in the problems pane.",
          "enum": [
            "information",
            "hint",
            "warning",
            "error"
          ]
        }
      }
    },
    "commands": [
      {
        "command": "tidier.scan",
        "title": "Tidier: Scan all projects in workspace",
        "shortTitle": "Tidier: Scan"
      },
      {
        "command": "tidier.fixAll",
        "title": "Tidier: Fix all problems in workspace",
        "shortTitle": "Tidier: Fix all"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": ".tidierrc",
        "url": "./.tidierrc.schema.json"
      }
    ],
    "languages": [
      {
        "id": "json",
        "aliases": [
          "JSON",
          "json"
        ],
        "extensions": [
          ".tidierrc"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "copy-schema": "cp ../tidier-lib/src/.tidierrc.schema.json ./",
    "build": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@tidier/lib": "0.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.59.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.19.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "ts-loader": "^8.0.14",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  }
}
