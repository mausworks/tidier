{
  "extends": "../../tsconfig.json",
  "references": [{ "path": "../tidier-lib" }],
  "include": ["src"],
  "compilerOptions": {
    "composite": true,
    "types": ["node", "jest"],
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
