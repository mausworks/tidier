{
  "private": true,
  "scripts": {
    "start": "concurrently 'yarn start:tidier' 'yarn start:lib' 'yarn start:cli'",
    "start:lib": "yarn --cwd packages/tidier-lib build -w",
    "start:cli": "yarn --cwd packages/tidier-cli build -w",
    "start:tidier": "packages/tidier-cli/tidier -Ww",
    "test:lib": "cd packages/tidier-lib && yarn test"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@tidier/**"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.0"
  }
}
